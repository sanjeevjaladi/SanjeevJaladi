{
	"name": "SAP_FS_DZ_PL1",
	"properties": {
		"activities": [
			{
				"name": "ForEachFolder",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "GetFolderNames",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"typeProperties": {
					"items": {
						"value": "@activity('GetFolderNames').output.value",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "ExecuteSAP_FS_DZ_PL2",
							"type": "ExecutePipeline",
							"typeProperties": {
								"pipeline": {
									"referenceName": "SAP_FS_DZ_PL2",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"FILEPATH": {
										"value": "@item().FILEPATH",
										"type": "Expression"
									}
								}
							}
						}
					]
				}
			},
			{
				"name": "GetFolderNames",
				"type": "Lookup",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "select FILENAME, FILEPATH from SAP_FIles "
					},
					"dataset": {
						"referenceName": "DS_SQL_DXC",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			}
		],
		"folder": {
			"name": "SAP"
		}
	}
}