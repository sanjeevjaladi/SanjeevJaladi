{
	"name": "File_Share_Local",
	"properties": {
		"activities": [
			{
				"name": "Copy Data1",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "FileSystemSource",
						"recursive": true
					},
					"sink": {
						"type": "FileSystemSink"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "File_Share",
						"type": "DatasetReference",
						"parameters": {
							"FilesPath": {
								"value": "Source",
								"type": "Expression"
							},
							"FileNames": {
								"value": "New Microsoft Excel Worksheet.xlsx",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "File_Share",
						"type": "DatasetReference",
						"parameters": {
							"FilesPath": {
								"value": "Target",
								"type": "Expression"
							},
							"FileNames": {
								"value": "New Microsoft Excel Worksheet.xlsx",
								"type": "Expression"
							}
						}
					}
				]
			}
		]
	}
}