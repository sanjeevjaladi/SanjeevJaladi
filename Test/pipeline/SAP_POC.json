{
	"name": "SAP_POC",
	"properties": {
		"activities": [
			{
				"name": "GetMaxTime",
				"type": "Lookup",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "SqlSource",
						"sqlReaderQuery": "Select MAX(STIME) as STIME from test_time"
					},
					"dataset": {
						"referenceName": "ASQL_DXC_DS",
						"type": "DatasetReference",
						"parameters": {
							"Table_Name": {
								"value": "test_time",
								"type": "Expression"
							}
						}
					}
				}
			},
			{
				"name": "Copy Data1",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Set Variable1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "AzureDataLakeStoreSource",
						"recursive": true
					},
					"sink": {
						"type": "AzureDataLakeStoreSink"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "FILES_UPDATED_BETWEEN_FROM_TO",
						"type": "DatasetReference",
						"parameters": {
							"File_Path": {
								"value": "Source/Dept",
								"type": "Expression"
							},
							"From_Time": {
								"value": "@activity('GetMaxTime').output.firstRow.STIME",
								"type": "Expression"
							},
							"To_Time": {
								"value": "@variables('DateTime')",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ADLS_DXC_NO_HEADER_ALL_FILES_DS",
						"type": "DatasetReference",
						"parameters": {
							"Path": {
								"value": "Output/Dept/Test",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Stored Procedure1",
				"type": "SqlServerStoredProcedure",
				"dependsOn": [
					{
						"activity": "Set Variable1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"storedProcedureName": "[dbo].[Update_Stime]",
					"storedProcedureParameters": {
						"LastModifiedtime": {
							"value": {
								"value": "@variables('DateTime')",
								"type": "Expression"
							},
							"type": "DateTime"
						}
					}
				},
				"linkedServiceName": {
					"referenceName": "ASQL_DXC_CONN",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "Set Variable1",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "GetMaxTime",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"typeProperties": {
					"variableName": "DateTime",
					"value": "@utcnow()"
				}
			}
		],
		"variables": {
			"DateTime": {
				"type": "String"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}